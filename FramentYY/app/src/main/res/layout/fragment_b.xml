<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.framentyy.BFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center"
            android:text="插入数据"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/ed"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入名字" />
        <EditText
            android:id="@+id/ed1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入性别" />
        <EditText
            android:id="@+id/ed2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入手机号" />
        <Button
            android:id="@+id/yybu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="添加"  />
    </LinearLayout>

</FrameLayout>
